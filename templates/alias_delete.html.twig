{% extends 'base.html.twig' %}

{% block body %}
    <form method="POST">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <div class="form-group">
                        <label for="source">Source address</label>
                        <input type="text" required class="form-control" name="source" id="source" value="{{ alias.source }}">
                        <small id="domainHelp" class="form-text text-muted">The e-mail-address for which this alias should catch e-mails for.</small>
                    </div>
                </div>
                <div class="col-sm alias-arrow">
                    <span class="fa fa-long-arrow-right fa-6"></span>
                </div>
                <div class="col-sm">
                    <div class="form-group">
                        <label for="destination">Destination address</label>
                        <input type="text" required class="form-control" name="destination" id="destination" value="{{ alias.destination }}">
                        <small id="domainHelp" class="form-text text-muted">The e-mail-address where e-mails to the source address should be sent to.</small>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button> <a href="{{ path('aliases_list') }}" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
{% endblock body %}